{
  "extends": ["config:base"],
  "compatibility": { "pnpm": "^6.0.0" },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Automerge all non Major updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Ensure automerge is not on for Major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
